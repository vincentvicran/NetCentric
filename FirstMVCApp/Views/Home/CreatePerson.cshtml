
@{
    ViewData["Title"] = "CreatePerson";
}

<h1>CreatePerson</h1>



@model PersonalDetail
@{ ViewData["Title"] = "PersonalDetail"; }

<h2>Here is @Html.DisplayFor(x => Model.FirstName)'s details</h2>

@Html.ActionLink("Back to Persons", "Persons", "Home", null, new { @class = "btn btn-secondary" })

@using (Html.BeginForm("CreatePerson", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => Model.PersonalDetailId)
    <table border="1" class="table table-bordered">
        <tr>
            <th>Particular</th>
            <th>Details</th>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.FirstName)</td>
            <td>@Html.TextBoxFor(x => Model.FirstName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Address)</td>
            <td>@Html.TextBoxFor(x => Model.Address)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Age)</td>
            <td>@Html.TextBoxFor(x => Model.Age)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.Occupation)</td>
            <td>@Html.TextBoxFor(x => Model.Occupation)</td>
        </tr>

    </table>

    <button type="submit" class="btn btn-primary btn-block">Add</button>


}
